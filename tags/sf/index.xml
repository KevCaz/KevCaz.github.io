&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>&lt;span style="color:#9893a5">## Download elevation raster (NB resolution is coarse)&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>&lt;span style="color:#d7827e">can_elv&lt;/span> &lt;span style="color:#797593">&amp;lt;-&lt;/span> &lt;span style="color:#d7827e">getData&lt;/span>&lt;span style="color:#797593">(&lt;/span>&lt;span style="color:#ea9d34">&amp;#34;alt&amp;#34;&lt;/span>&lt;span style="color:#797593">,&lt;/span> &lt;span style="color:#d7827e">country&lt;/span> &lt;span style="color:#797593">=&lt;/span> &lt;span style="color:#ea9d34">&amp;#34;CAN&amp;#34;&lt;/span>&lt;span style="color:#797593">)&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>
