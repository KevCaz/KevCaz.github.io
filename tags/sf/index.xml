&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>&lt;span style="color:#ea9d34">+.&lt;/span>&lt;span style="color:#d7827e">..&lt;/span> &lt;span style="color:#d7827e">ont_elv&lt;/span> &lt;span style="color:#797593">&amp;lt;-&lt;/span> &lt;span style="color:#d7827e">rasterize&lt;/span>&lt;span style="color:#797593">(&lt;/span>&lt;span style="color:#d7827e">ont&lt;/span>&lt;span style="color:#797593">,&lt;/span> &lt;span style="color:#d7827e">can_elv&lt;/span>&lt;span style="color:#797593">,&lt;/span> &lt;span style="color:#d7827e">mask&lt;/span> &lt;span style="color:#797593">=&lt;/span> &lt;span style="color:#286983">TRUE&lt;/span>&lt;span style="color:#797593">)&lt;/span>
